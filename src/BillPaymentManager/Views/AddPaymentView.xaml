<UserControl x:Class="BillPaymentManager.Views.AddPaymentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Header -->
            <TextBlock Text="Add Payment" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="#2C3E50"
                       Margin="0,0,0,20"/>
            
            <!-- SMS Input Section -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Paste SMS Text" 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,10"/>
                    
                    <TextBox Text="{Binding SmsText, UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Height="120"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,0,10"/>
                    
                    <StackPanel Orientation="Horizontal">
                        <Button Content="ðŸ” Parse SMS" 
                                Command="{Binding ParseSmsCommand}"  
                                Style="{StaticResource PrimaryButtonStyle}"/>
                        <Button Content="ðŸ”„ Reset" 
                                Command="{Binding ResetFormCommand}"
                                Style="{StaticResource DangerButtonStyle}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Status Message -->
            <TextBlock Text="{Binding StatusMessage}" 
                       FontSize="14"
                       Foreground="#f39c12"
                       Margin="10,10,0,10"
                       Visibility="{Binding StatusMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
            
            <!-- Parsed Payment Details -->
            <Border Style="{StaticResource CardStyle}" 
                    Visibility="{Binding IsParsed, Converter={StaticResource BoolToVisibilityConverter}}"
                    Margin="0,10,0,0">
                <StackPanel>
                    <TextBlock Text="Parsed Payment Details" 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,15"/>
                    
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Left Column - Common andMobile Payment Fields -->
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <Label Content="Payment Type:"/>
                            <TextBox Text="{Binding ParsedPayment.Type}" 
                                     IsReadOnly="True"
                                     Background="#ecf0f1"
                                     FontWeight="Bold"/>
                            
                            <Label Content="Amount (à§³):"/>
                            <TextBox Text="{Binding ParsedPayment.Amount, StringFormat=N2}" 
                                     IsReadOnly="True"
                                     Background="#ecf0f1"
                                     FontSize="18"
                                     FontWeight="Bold"
                                     Foreground="#27ae60"/>
                            
                            <Label Content="Transaction ID:"/>
                            <TextBox Text="{Binding ParsedPayment.TransactionId}" 
                                     IsReadOnly="True"
                                     Background="#ecf0f1"/>
                            
                            <!-- Mobile Payment Specific -->
                            <Label Content="Provider:"
                                   Visibility="{Binding ParsedPayment.Type, Converter={StaticResource StringToVisibilityConverter}}"/>
                            <TextBox Text="{Binding ParsedPayment.Provider}" 
                                     IsReadOnly="True"
                                     Background="#ecf0f1"
                                     Visibility="{Binding ParsedPayment.Type, Converter={StaticResource StringToVisibilityConverter}}"/>
                            
                            <Label Content="Phone Number:"
                                   Visibility="{Binding ParsedPayment.Type, Converter={StaticResource StringToVisibilityConverter}}"/>
                            <TextBox Text="{Binding ParsedPayment.PhoneNumber}" 
                                     IsReadOnly="True"
                                     Background="#ecf0f1"
                                     Visibility="{Binding ParsedPayment.Type, Converter={StaticResource StringToVisibilityConverter}}"/>
                            
                            <!-- Electricity Token Specific - Left Column -->
                            <Label Content="Meter Number:"
                                   Visibility="{Binding ParsedPayment.MeterNumber, Converter={StaticResource StringToVisibilityConverter}}"/>
                            <TextBox Text="{Binding ParsedPayment.MeterNumber}" 
                                     IsReadOnly="True"
                                     Background="#ecf0f1"
                                     FontWeight="Bold"
                                     Visibility="{Binding ParsedPayment.MeterNumber, Converter={StaticResource StringToVisibilityConverter}}"/>
                            
                            <Label Content="Token Number:"
                                   Visibility="{Binding ParsedPayment.Token, Converter={StaticResource StringToVisibilityConverter}}"/>
                            <TextBox Text="{Binding ParsedPayment.Token}" 
                                     IsReadOnly="True"
                                     Background="#fff3cd"
                                     FontWeight="Bold"
                                     FontSize="14"
                                     Foreground="#856404"
                                     Visibility="{Binding ParsedPayment.Token, Converter={StaticResource StringToVisibilityConverter}}"/>
                            
                            <Label Content="Sequence Number:"
                                   Visibility="{Binding ParsedPayment.SequenceNumber, Converter={StaticResource StringToVisibilityConverter}}"/>
                            <TextBox Text="{Binding ParsedPayment.SequenceNumber}" 
                                     IsReadOnly="True"
                                     Background="#ecf0f1"
                                     Visibility="{Binding ParsedPayment.SequenceNumber, Converter={StaticResource StringToVisibilityConverter}}"/>
                        </StackPanel>
                        
                        <!-- Right Column - Electricity Cost Breakdown or Customer Info -->
                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <!-- Electricity Cost Breakdown -->
                            <TextBlock Text="Cost Breakdown" 
                                       FontWeight="SemiBold"
                                       FontSize="14"
                                       Margin="0,0,0,10"
                                       Visibility="{Binding ParsedPayment.EnergyCost, Converter={StaticResource StringToVisibilityConverter}}"/>
                            
                            <Grid Visibility="{Binding ParsedPayment.EnergyCost, Converter={StaticResource StringToVisibilityConverter}}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Energy Cost:" Margin="0,5"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ParsedPayment.EnergyCost, StringFormat='à§³{0:N2}'}" Margin="10,5" FontWeight="Bold"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Meter Rent:" Margin="0,5"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ParsedPayment.MeterRent, StringFormat='à§³{0:N2}'}" Margin="10,5"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Demand Charge:" Margin="0,5"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ParsedPayment.DemandCharge, StringFormat='à§³{0:N2}'}" Margin="10,5"/>
                                
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="VAT:" Margin="0,5"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding ParsedPayment.VAT, StringFormat='à§³{0:N2}'}" Margin="10,5"/>
                                
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Rebate:" Margin="0,5"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding ParsedPayment.Rebate, StringFormat='à§³{0:N2}'}" Margin="10,5" Foreground="#e74c3c"/>
                                
                                <TextBlock Grid.Row="5" Grid.Column="0" Text="Arrear:" Margin="0,5"/>
                                <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding ParsedPayment.ArrearAmount, StringFormat='à§³{0:N2}'}" Margin="10,5"/>
                                
                                <Border Grid.Row="6" Grid.ColumnSpan="2" 
                                        BorderBrush="#27ae60" 
                                        BorderThickness="0,2,0,0" 
                                        Margin="0,10,0,5"
                                        Padding="0,10,0,0">
                                    <Grid>
                                        <TextBlock Grid.Column="0" Text="Vending Amount:" FontWeight="Bold"/>
                                        <TextBlock Grid.Column="1" HorizontalAlignment="Right" 
                                                   Text="{Binding ParsedPayment.VendingAmount, StringFormat='à§³{0:N2}'}" 
                                                   FontWeight="Bold" 
                                                   FontSize="16"
                                                   Foreground="#27ae60"/>
                                    </Grid>
                                </Border>
                            </Grid>
                            
                            <!-- Customer Info (for both types) -->
                            <Label Content="Customer Name (Optional):"/>
                            <TextBox Text="{Binding ParsedPayment.CustomerName, UpdateSourceTrigger=PropertyChanged}"/>
                            
                            <Label Content="Notes (Optional):"/>
                            <TextBox Text="{Binding ParsedPayment.Notes, UpdateSourceTrigger=PropertyChanged}"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     Height="60"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                Margin="0,20,0,0">
                        <Button Content="ðŸ’¾ Save Payment" 
                                Command="{Binding SavePaymentCommand}"
                                Style="{StaticResource SuccessButtonStyle}"
                                IsEnabled="{Binding IsSaving, Converter={StaticResource InverseBoolConverter}}"/>
                        <Button Content="ðŸ–¨ï¸ Print Receipt" 
                                Command="{Binding PrintReceiptCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Sample SMS Format -->
            <Border Style="{StaticResource CardStyle}" 
                    Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="Sample SMS Formats" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,10"/>
                    
                    <TextBlock TextWrapping="Wrap" 
                               FontSize="12"
                               Foreground="#7f8c8d">
                        <Run Text="Mobile Payments:" FontWeight="Bold"/>
                        <LineBreak/><LineBreak/>
                        <Run Text="bKash: "/>
                        <Run Text="You have received Tk 1,500.00 from 01711XXXXXX. TrxID ABC123XYZ at 25/12/2025 10:30 PM."/>
                        <LineBreak/><LineBreak/>
                        <Run Text="Nagad: "/>
                        <Run Text="You have received à§³1,500.00 from 01711XXXXXX. Transaction ID: ABC123XYZ Date: 25/12/2025 10:30 PM."/>
                        <LineBreak/><LineBreak/><LineBreak/>
                        <Run Text="Electricity Tokens:" FontWeight="Bold"/>
                        <LineBreak/><LineBreak/>
                        <Run Text="BREB: "/>
                        <Run Text="BREB Token Purchase Successful. Meter No: 40110356142 Sequence: 67 Energy Cost: 344.79 Meter Rent: 40 Demand Charge: 84 VAT: 23.33 Rebate: -2.12 Vending Amount: 490.00 Token(s): 2357-2027-3645-9272-4484 Trx ID: 74PVD2QU"/>
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
