<UserControl x:Class="BillPaymentManager.Views.AddPaymentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Header -->
            <TextBlock Text="Add Payment" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="#2C3E50"
                       Margin="0,0,0,20"/>
            
            <!-- SMS Input Section -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Paste SMS Text" 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,10"/>
                    
                    <TextBox Text="{Binding SmsText, UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Height="120"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,0,10"/>
                    
                    <StackPanel Orientation="Horizontal">
                        <Button Content="ðŸ” Parse SMS" 
                                Command="{Binding ParseSmsCommand}"  
                                Style="{StaticResource PrimaryButtonStyle}"/>
                        <Button Content="ðŸ”„ Reset" 
                                Command="{Binding ResetFormCommand}"
                                Style="{StaticResource DangerButtonStyle}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Status Message -->
            <TextBlock Text="{Binding StatusMessage}" 
                       FontSize="14"
                       Foreground="#f39c12"
                       Margin="10,10,0,10"
                       Visibility="{Binding StatusMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
            
            <!-- Parsed Payment Details -->
            <Border Style="{StaticResource CardStyle}" 
                    Visibility="{Binding IsParsed, Converter={StaticResource BoolToVisibilityConverter}}"
                    Margin="0,10,0,0">
                <StackPanel>
                    <TextBlock Text="Parsed Payment Details" 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <Label Content="Provider:"/>
                            <TextBox Text="{Binding ParsedPayment.Provider}" 
                                     IsReadOnly="True"
                                     Background="#ecf0f1"/>
                            
                            <Label Content="Transaction ID:"/>
                            <TextBox Text="{Binding ParsedPayment.TransactionId}" 
                                     IsReadOnly="True"
                                     Background="#ecf0f1"/>
                            
                            <Label Content="Amount (à§³):"/>
                            <TextBox Text="{Binding ParsedPayment.Amount, StringFormat=N2}" 
                                     IsReadOnly="True"
                                     Background="#ecf0f1"
                                     FontSize="16"
                                     FontWeight="Bold"
                                     Foreground="#27ae60"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <Label Content="Phone Number:"/>
                            <TextBox Text="{Binding ParsedPayment.PhoneNumber}" 
                                     IsReadOnly="True"
                                     Background="#ecf0f1"/>
                            
                            <Label Content="Customer Name (Optional):"/>
                            <TextBox Text="{Binding ParsedPayment.CustomerName, UpdateSourceTrigger=PropertyChanged}"/>
                            
                            <Label Content="Notes (Optional):"/>
                            <TextBox Text="{Binding ParsedPayment.Notes, UpdateSourceTrigger=PropertyChanged}"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     Height="60"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                Margin="0,20,0,0">
                        <Button Content="ðŸ’¾ Save Payment" 
                                Command="{Binding SavePaymentCommand}"
                                Style="{StaticResource SuccessButtonStyle}"
                                IsEnabled="{Binding IsSaving, Converter={StaticResource InverseBoolConverter}}"/>
                        <Button Content="ðŸ–¨ï¸ Print Receipt" 
                                Command="{Binding PrintReceiptCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Sample SMS Format -->
            <Border Style="{StaticResource CardStyle}" 
                    Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="Sample SMS Formats" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,10"/>
                    
                    <TextBlock TextWrapping="Wrap" 
                               FontSize="12"
                               Foreground="#7f8c8d">
                        <Run Text="bKash: "/>
                        <Run Text="You have received Tk 1,500.00 from 01711XXXXXX. TrxID ABC123XYZ at 25/12/2025 10:30 PM."/>
                        <LineBreak/><LineBreak/>
                        <Run Text="Nagad: "/>
                        <Run Text="You have received à§³1,500.00 from 01711XXXXXX. Transaction ID: ABC123XYZ Date: 25/12/2025 10:30 PM."/>
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
