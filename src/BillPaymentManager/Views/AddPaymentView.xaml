<UserControl x:Class="BillPaymentManager.Views.AddPaymentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="900">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Header -->
            <TextBlock Text="Add Electricity Token" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="#2C3E50"
                       Margin="0,0,0,20"/>
            
            <!-- SMS Input Section -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Paste SMS from BREB/REB" 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,10"/>
                    
                    <TextBox Text="{Binding SmsText, UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Height="100"
                             VerticalScrollBarVisibility="Auto"/>
                    
                    <Button Content="ðŸ“‹ Parse SMS" 
                            Command="{Binding ParseSmsCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Margin="0,10,0,0"
                            HorizontalAlignment="Left"/>
                    
                    <!-- Status Message -->
                    <TextBlock Text="{Binding StatusMessage}"
                               Foreground="#27ae60"
                               FontWeight="SemiBold"
                               Margin="0,10,0,0"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
            
            <!-- Parsed Token Details -->
            <Border Style="{StaticResource CardStyle}" 
                    Visibility="{Binding IsParsed, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel>
                    <TextBlock Text="Token Details" 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Left Column - Token Info -->
                        <StackPanel Grid.Column="0" Margin="0,0,15,0">
                            <Label Content="Meter Number:"/>
                            <TextBox Text="{Binding ParsedPayment.MeterNumber}" 
                                     IsReadOnly="True"
                                     Background="#ecf0f1"
                                     FontWeight="Bold"
                                     FontSize="14"/>
                            
                            <Label Content="Token Number:"/>
                            <TextBox Text="{Binding ParsedPayment.Token}" 
                                     IsReadOnly="True"
                                     Background="#fff3cd"
                                     FontWeight="Bold"
                                     FontSize="14"
                                     FontFamily="Courier New"
                                     Foreground="#856404"/>
                            
                            <Label Content="Sequence Number:"/>
                            <TextBox Text="{Binding ParsedPayment.SequenceNumber}" 
                                     IsReadOnly="True"
                                     Background="#ecf0f1"/>
                            
                            <Label Content="Transaction ID:"/>
                            <TextBox Text="{Binding ParsedPayment.TransactionId}" 
                                     IsReadOnly="True"
                                     Background="#ecf0f1"/>
                        </StackPanel>
                        
                        <!-- Right Column - Cost Breakdown -->
                        <StackPanel Grid.Column="1" Margin="15,0,0,0">
                            <TextBlock Text="Cost Breakdown" 
                                       FontWeight="SemiBold"
                                       FontSize="14"
                                       Margin="0,0,0,10"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Energy Cost:" Margin="0,5"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ParsedPayment.EnergyCost, StringFormat='à§³{0:N2}'}" Margin="10,5,0,5" FontWeight="Bold"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Meter Rent:" Margin="0,5"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ParsedPayment.MeterRent, StringFormat='à§³{0:N2}'}" Margin="10,5,0,5"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Demand Charge:" Margin="0,5"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ParsedPayment.DemandCharge, StringFormat='à§³{0:N2}'}" Margin="10,5,0,5"/>
                                
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="VAT:" Margin="0,5"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding ParsedPayment.VAT, StringFormat='à§³{0:N2}'}" Margin="10,5,0,5"/>
                                
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Rebate:" Margin="0,5"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding ParsedPayment.Rebate, StringFormat='à§³{0:N2}'}" Margin="10,5,0,5" Foreground="#e74c3c"/>
                                
                                <TextBlock Grid.Row="5" Grid.Column="0" Text="Arrear:" Margin="0,5"/>
                                <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding ParsedPayment.ArrearAmount, StringFormat='à§³{0:N2}'}" Margin="10,5,0,5"/>
                                
                                <Border Grid.Row="6" Grid.ColumnSpan="2" 
                                        BorderBrush="#27ae60" 
                                        BorderThickness="0,2,0,0" 
                                        Margin="0,10,0,5"
                                        Padding="0,10,0,0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Vending Amount:" FontWeight="Bold" FontSize="14"/>
                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding ParsedPayment.VendingAmount, StringFormat='à§³{0:N2}'}" 
                                                   FontWeight="Bold" 
                                                   FontSize="16"
                                                   Foreground="#27ae60"/>
                                    </Grid>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Optional Fields -->
                    <Grid Margin="0,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,15,0">
                            <Label Content="Customer Name (Optional):"/>
                            <TextBox Text="{Binding ParsedPayment.CustomerName, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Margin="15,0,0,0">
                            <Label Content="Notes (Optional):"/>
                            <TextBox Text="{Binding ParsedPayment.Notes, UpdateSourceTrigger=PropertyChanged}"
                                     TextWrapping="Wrap"
                                     Height="60"
                                     AcceptsReturn="True"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                Margin="0,20,0,0">
                        <Button Content="ðŸ’¾ Save Token" 
                                Command="{Binding SavePaymentCommand}"
                                Style="{StaticResource SuccessButtonStyle}"
                                IsEnabled="{Binding IsSaving, Converter={StaticResource InverseBoolConverter}}"/>
                        <Button Content="ðŸ–¨ï¸ Print Receipt" 
                                Command="{Binding PrintReceiptCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Sample SMS Format -->
            <Border Style="{StaticResource CardStyle}" 
                    Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="Sample BREB SMS Format" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,10"/>
                    
                    <TextBlock TextWrapping="Wrap" 
                               FontSize="12"
                               Foreground="#7f8c8d"
                               FontFamily="Courier New">
                        <Run Text="BREB Token Purchase Successful. Meter No: 40110356142 Sequence: 67 Energy Cost: 344.79 Meter Rent: 40 Demand Charge: 84 VAT: 23.33 Rebate: -2.12 Arrear Amount: 0 Vending Amount: 490.00 Token(s): 2357-2027-3645-9272-4484 Trx ID: 74PVD2QU"/>
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
