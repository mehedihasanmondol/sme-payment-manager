<UserControl x:Class="BillPaymentManager.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Header -->
            <TextBlock Text="Dashboard" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="#2C3E50"
                       Margin="0,0,0,20"/>
            
            <!-- Performance Overview -->
            <TextBlock Text="Performance Overview" 
                       FontSize="20" 
                       FontWeight="SemiBold"
                       Margin="0,10,0,10"/>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Today -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,5,0">
                    <StackPanel>
                        <TextBlock Text="Today" 
                                   FontSize="14" 
                                   Foreground="#7f8c8d"/>
                        <TextBlock Text="{Binding TodayAmount, StringFormat='৳{0:N0}'}" 
                                   FontSize="26" 
                                   FontWeight="Bold"
                                   Foreground="#27ae60"
                                   Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding TodayCount, StringFormat='{}{0} transactions'}" 
                                   FontSize="11" 
                                   Foreground="#7f8c8d"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- This Month -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="5,0,5,0">
                    <StackPanel>
                        <TextBlock Text="This Month" 
                                   FontSize="14" 
                                   Foreground="#7f8c8d"/>
                        <TextBlock Text="{Binding ThisMonthAmount, StringFormat='৳{0:N0}'}" 
                                   FontSize="26" 
                                   FontWeight="Bold"
                                   Foreground="#3498db"
                                   Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding ThisMonthCount, StringFormat='{}{0} transactions'}" 
                                   FontSize="11" 
                                   Foreground="#7f8c8d"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- All Time -->
                <Border Grid.Column="2" Style="{StaticResource CardStyle}" Margin="5,0,0,0">
                    <StackPanel>
                        <TextBlock Text="All Time" 
                                   FontSize="14" 
                                   Foreground="#7f8c8d"/>
                        <TextBlock Text="{Binding TotalAmount, StringFormat='৳{0:N0}'}" 
                                   FontSize="26" 
                                   FontWeight="Bold"
                                   Foreground="#2C3E50"
                                   Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding TotalCount, StringFormat='{}{0} total'}" 
                                   FontSize="11" 
                                   Foreground="#7f8c8d"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
            
           
            
            <!-- Business Analytics Header with Filters -->
            <Grid Margin="0,30,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel>
                    <TextBlock Text="Business Analytics" 
                               FontSize="20" 
                               FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding DateRangeHint}" 
                               FontSize="12" 
                               Foreground="#7f8c8d" 
                               Margin="0,2,0,0"/>
                </StackPanel>

                <!-- Filters -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <StackPanel Margin="0,0,10,0">
                         <TextBlock Text="From" FontSize="10" Foreground="#7f8c8d"/>
                         <DatePicker SelectedDate="{Binding StartDate}" Width="100"/>
                    </StackPanel>
                    
                    <StackPanel Margin="0,0,10,0">
                         <TextBlock Text="To" FontSize="10" Foreground="#7f8c8d"/>
                         <DatePicker SelectedDate="{Binding EndDate}" Width="100"/>
                    </StackPanel>
                    
                    <Button Content="Filter" 
                            Command="{Binding FilterDataCommand}" 
                            Style="{StaticResource PrimaryButtonStyle}" 
                            Margin="0,12,5,0" 
                            Padding="10,5" FontSize="12"/>
                            
                    <Button Content="Reset" 
                            Command="{Binding ClearFilterCommand}" 
                            Style="{StaticResource PrintButtonStyle}" 
                            Background="#95a5a6"
                            Margin="0,12,0,0" 
                            Padding="10,5" FontSize="12"/>
                </StackPanel>
            </Grid>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Energy Cost -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,5,0">
                    <StackPanel>
                        <TextBlock Text="Energy Sold" 
                                   FontSize="12" 
                                   Foreground="#7f8c8d"/>
                        <TextBlock Text="{Binding TotalEnergyCost, StringFormat='৳{0:N0}'}" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="#2980b9"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Meter Rent -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="5,0,5,0">
                    <StackPanel>
                        <TextBlock Text="Meter Rent" 
                                   FontSize="12" 
                                   Foreground="#7f8c8d"/>
                        <TextBlock Text="{Binding TotalMeterRent, StringFormat='৳{0:N0}'}" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="#8e44ad"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Demand Charge -->
                <Border Grid.Column="2" Style="{StaticResource CardStyle}" Margin="5,0,5,0">
                    <StackPanel>
                        <TextBlock Text="Demand Chg" 
                                   FontSize="12" 
                                   Foreground="#7f8c8d"/>
                        <TextBlock Text="{Binding TotalDemandCharge, StringFormat='৳{0:N0}'}" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="#d35400"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- VAT -->
                <Border Grid.Column="3" Style="{StaticResource CardStyle}" Margin="5,0,5,0">
                    <StackPanel>
                        <TextBlock Text="VAT Collected" 
                                   FontSize="12" 
                                   Foreground="#7f8c8d"/>
                        <TextBlock Text="{Binding TotalVAT, StringFormat='৳{0:N0}'}" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="#27ae60"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Rebate -->
                <Border Grid.Column="4" Style="{StaticResource CardStyle}" Margin="5,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Rebates" 
                                   FontSize="12" 
                                   Foreground="#7f8c8d"/>
                        <TextBlock Text="{Binding TotalRebate, StringFormat='৳{0:N0}'}" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="#c0392b"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
            
        </StackPanel>
    </ScrollViewer>
</UserControl>
