<UserControl x:Class="BillPaymentManager.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Header -->
            <TextBlock Text="Dashboard" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="#2C3E50"
                       Margin="0,0,0,20"/>
            
            <!-- Refresh Button -->
            <Button Content="ðŸ”„ Refresh" 
                    Command="{Binding LoadDataCommand}"
                    Style="{StaticResource PrimaryButtonStyle}"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,20"/>
            
            <!-- Performance Overview -->
            <TextBlock Text="Performance Overview" 
                       FontSize="20" 
                       FontWeight="SemiBold"
                       Margin="0,10,0,10"/>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Today -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,5,0">
                    <StackPanel>
                        <TextBlock Text="Today" 
                                   FontSize="14" 
                                   Foreground="#7f8c8d"/>
                        <TextBlock Text="{Binding TodayAmount, StringFormat='à§³{0:N0}'}" 
                                   FontSize="26" 
                                   FontWeight="Bold"
                                   Foreground="#27ae60"
                                   Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding TodayCount, StringFormat='{}{0} transactions'}" 
                                   FontSize="11" 
                                   Foreground="#7f8c8d"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- This Month -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="5,0,5,0">
                    <StackPanel>
                        <TextBlock Text="This Month" 
                                   FontSize="14" 
                                   Foreground="#7f8c8d"/>
                        <TextBlock Text="{Binding ThisMonthAmount, StringFormat='à§³{0:N0}'}" 
                                   FontSize="26" 
                                   FontWeight="Bold"
                                   Foreground="#3498db"
                                   Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding ThisMonthCount, StringFormat='{}{0} transactions'}" 
                                   FontSize="11" 
                                   Foreground="#7f8c8d"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- All Time -->
                <Border Grid.Column="2" Style="{StaticResource CardStyle}" Margin="5,0,0,0">
                    <StackPanel>
                        <TextBlock Text="All Time" 
                                   FontSize="14" 
                                   Foreground="#7f8c8d"/>
                        <TextBlock Text="{Binding TotalAmount, StringFormat='à§³{0:N0}'}" 
                                   FontSize="26" 
                                   FontWeight="Bold"
                                   Foreground="#2C3E50"
                                   Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding TotalCount, StringFormat='{}{0} total'}" 
                                   FontSize="11" 
                                   Foreground="#7f8c8d"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
            
           
            
            <!-- Business Analytics -->
            <TextBlock Text="Business Analytics" 
                       FontSize="20" 
                       FontWeight="SemiBold"
                       Margin="0,30,0,10"/>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Energy Cost -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,5,0">
                    <StackPanel>
                        <TextBlock Text="Energy Sold" 
                                   FontSize="12" 
                                   Foreground="#7f8c8d"/>
                        <TextBlock Text="{Binding TotalEnergyCost, StringFormat='à§³{0:N0}'}" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="#2980b9"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Meter Rent -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="5,0,5,0">
                    <StackPanel>
                        <TextBlock Text="Meter Rent" 
                                   FontSize="12" 
                                   Foreground="#7f8c8d"/>
                        <TextBlock Text="{Binding TotalMeterRent, StringFormat='à§³{0:N0}'}" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="#8e44ad"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Demand Charge -->
                <Border Grid.Column="2" Style="{StaticResource CardStyle}" Margin="5,0,5,0">
                    <StackPanel>
                        <TextBlock Text="Demand Chg" 
                                   FontSize="12" 
                                   Foreground="#7f8c8d"/>
                        <TextBlock Text="{Binding TotalDemandCharge, StringFormat='à§³{0:N0}'}" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="#d35400"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- VAT -->
                <Border Grid.Column="3" Style="{StaticResource CardStyle}" Margin="5,0,5,0">
                    <StackPanel>
                        <TextBlock Text="VAT Collected" 
                                   FontSize="12" 
                                   Foreground="#7f8c8d"/>
                        <TextBlock Text="{Binding TotalVAT, StringFormat='à§³{0:N0}'}" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="#27ae60"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Rebate -->
                <Border Grid.Column="4" Style="{StaticResource CardStyle}" Margin="5,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Rebates" 
                                   FontSize="12" 
                                   Foreground="#7f8c8d"/>
                        <TextBlock Text="{Binding TotalRebate, StringFormat='à§³{0:N0}'}" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="#c0392b"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
            
        </StackPanel>
    </ScrollViewer>
</UserControl>
