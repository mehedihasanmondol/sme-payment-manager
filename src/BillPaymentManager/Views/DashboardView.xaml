<UserControl x:Class="BillPaymentManager.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Header -->
            <TextBlock Text="Dashboard" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="#2C3E50"
                       Margin="0,0,0,20"/>
            
            <!-- Refresh Button -->
            <Button Content="ðŸ”„ Refresh" 
                    Command="{Binding LoadDataCommand}"
                    Style="{StaticResource PrimaryButtonStyle}"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,20"/>
            
            <!-- Today's Stats -->
            <TextBlock Text="Today's Summary" 
                       FontSize="20" 
                       FontWeight="SemiBold"
                       Margin="0,10,0,10"/>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Today's Amount" 
                                   FontSize="14" 
                                   Foreground="#7f8c8d"/>
                        <TextBlock Text="{Binding TodayAmount, StringFormat='à§³{0:N2}'}" 
                                   FontSize="32" 
                                   FontWeight="Bold"
                                   Foreground="#27ae60"
                                   Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding TodayCount, StringFormat='{}{0} transactions'}" 
                                   FontSize="12" 
                                   Foreground="#7f8c8d"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                
                <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="This Month" 
                                   FontSize="14" 
                                   Foreground="#7f8c8d"/>
                        <TextBlock Text="{Binding ThisMonthAmount, StringFormat='à§³{0:N2}'}" 
                                   FontSize="32" 
                                   FontWeight="Bold"
                                   Foreground="#3498db"
                                   Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding ThisMonthCount, StringFormat='{}{0} transactions'}" 
                                   FontSize="12" 
                                   Foreground="#7f8c8d"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
            
            <!-- All Time Stats -->
            <TextBlock Text="All Time" 
                       FontSize="20" 
                       FontWeight="SemiBold"
                       Margin="0,30,0,10"/>
            
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Total Amount" 
                               FontSize="14" 
                               Foreground="#7f8c8d"/>
                    <TextBlock Text="{Binding TotalAmount, StringFormat='à§³{0:N2}'}" 
                               FontSize="38" 
                               FontWeight="Bold"
                               Foreground="#2C3E50"
                               Margin="0,5,0,0"/>
                    <TextBlock Text="{Binding TotalCount, StringFormat='{}{0} total transactions'}" 
                               FontSize="12" 
                               Foreground="#7f8c8d"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- By Provider -->
            <TextBlock Text="By Provider" 
                       FontSize="20" 
                       FontWeight="SemiBold"
                       Margin="0,30,0,10"/>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="bKash" 
                                   FontSize="14" 
                                   Foreground="#7f8c8d"/>
                        <TextBlock Text="{Binding BKashAmount, StringFormat='à§³{0:N2}'}" 
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   Foreground="#e11484"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                
                <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Nagad" 
                                   FontSize="14" 
                                   Foreground="#7f8c8d"/>
                        <TextBlock Text="{Binding NagadAmount, StringFormat='à§³{0:N2}'}" 
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   Foreground="#f26125"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                
                <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Rocket" 
                                   FontSize="14" 
                                   Foreground="#7f8c8d"/>
                        <TextBlock Text="{Binding RocketAmount, StringFormat='à§³{0:N2}'}" 
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   Foreground="#8e44ad"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                
                <Border Grid.Column="3" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Other" 
                                   FontSize="14" 
                                   Foreground="#7f8c8d"/>
                        <TextBlock Text="{Binding OtherAmount, StringFormat='à§³{0:N2}'}" 
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   Foreground="#95a5a6"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
            
        </StackPanel>
    </ScrollViewer>
</UserControl>
