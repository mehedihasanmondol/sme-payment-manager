<UserControl x:Class="BillPaymentManager.Views.HistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Payment History" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   Foreground="#2C3E50"
                   Margin="0,0,0,20"/>
        
        <!-- Filter Section -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="Filters" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,10"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <Label Content="Start Date:"/>
                        <DatePicker SelectedDate="{Binding StartDate}"/>
                        
                        <Label Content="End Date:"/>
                        <DatePicker SelectedDate="{Binding EndDate}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Margin="10,0">
                        <Label Content="Provider:"/>
                        <ComboBox ItemsSource="{Binding ProviderOptions}"
                                  SelectedItem="{Binding FilterProvider}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource ProviderToStringConverter}}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        
                        <Label Content="Search:"/>
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Search by transaction ID, phone, or customer name"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2" Margin="10,0,0,0" VerticalAlignment="Bottom">
                        <Button Content="ðŸ” Apply Filter" 
                                Command="{Binding ApplyFilterCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"/>
                        <Button Content="ðŸ”„ Clear Filter" 
                                Command="{Binding ClearFilterCommand}"
                                Style="{StaticResource DangerButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
        
        <!-- Data Grid -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}">
            <DataGrid ItemsSource="{Binding Payments}"
                      SelectedItem="{Binding SelectedPayment}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Date" 
                                        Binding="{Binding PaymentDate, StringFormat='dd/MM/yyyy HH:mm'}"
                                        Width="130"/>
                    <DataGridTextColumn Header="Provider" 
                                        Binding="{Binding Provider}"
                                        Width="80"/>
                    <DataGridTextColumn Header="Amount" 
                                        Binding="{Binding Amount, StringFormat='à§³{0:N2}'}"
                                        Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="#27ae60"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Transaction ID" 
                                        Binding="{Binding TransactionId}"
                                        Width="120"/>
                    <DataGridTextColumn Header="Phone" 
                                        Binding="{Binding PhoneNumber}"
                                        Width="110"/>
                    <DataGridTextColumn Header="Customer" 
                                        Binding="{Binding CustomerName}"
                                        Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
        
        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="ðŸ–¨ï¸ Print Selected" 
                    Command="{Binding PrintSelectedCommand}"
                    Style="{StaticResource PrimaryButtonStyle}"/>
            <Button Content="ðŸ—‘ï¸ Delete Selected" 
                    Command="{Binding DeleteSelectedCommand}"
                    Style="{StaticResource DangerButtonStyle}"/>
        </StackPanel>
    </Grid>
</UserControl>
