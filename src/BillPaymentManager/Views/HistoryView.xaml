<UserControl x:Class="BillPaymentManager.Views.HistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Token Purchase History" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   Foreground="#2C3E50"
                   Margin="0,0,0,20"/>
        
        <!-- Filter Section - Compact Single Row -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,10" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,10,0">
                    <TextBlock Text="From:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <DatePicker SelectedDate="{Binding StartDate}" Width="120"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,10,0">
                    <TextBlock Text="To:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <DatePicker SelectedDate="{Binding EndDate}" Width="120"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,10,0">
                    <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Width="250"
                             Height="28"
                             VerticalContentAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <Button Content="ðŸ” Filter" 
                            Command="{Binding ApplyFilterCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Width="90"
                            Height="34"
                            Margin="0,0,5,0"/>
                    <Button Content="ðŸ”„ Clear" 
                            Command="{Binding ClearFilterCommand}"
                            Style="{StaticResource DangerButtonStyle}"
                            Width="90"
                            Height="34"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Data Grid - Fixed Height for 10 Rows -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,0,0,10" Padding="0">
            <DataGrid ItemsSource="{Binding Payments}"
                      SelectedItem="{Binding SelectedPayment}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      AlternatingRowBackground="#f8f9fa"
                      RowHeight="35"
                      FontSize="13"
                      Height="385"
                      VerticalScrollBarVisibility="Disabled"
                      HorizontalScrollBarVisibility="Auto">
                
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Date" 
                                        Binding="{Binding PaymentDate, StringFormat=dd/MM/yyyy}" 
                                        Width="100"/>
                    
                    <DataGridTextColumn Header="Transaction ID" 
                                        Binding="{Binding TransactionId}" 
                                        Width="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontFamily" Value="Courier New"/>
                                <Setter Property="FontSize" Value="12"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <DataGridTextColumn Header="Meter Number" 
                                        Binding="{Binding MeterNumber}" 
                                        Width="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <DataGridTextColumn Header="Seq" 
                                        Binding="{Binding SequenceNumber}" 
                                        Width="50">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <DataGridTextColumn Header="Token" 
                                        Binding="{Binding Token}" 
                                        Width="180">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontFamily" Value="Courier New"/>
                                <Setter Property="FontSize" Value="11"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <DataGridTextColumn Header="Energy Cost" 
                                        Binding="{Binding EnergyCost, StringFormat='à§³{0:N2}'}" 
                                        Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextAlignment" Value="Right"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <DataGridTextColumn Header="Meter Rent" 
                                        Binding="{Binding MeterRent, StringFormat='à§³{0:N2}'}" 
                                        Width="90">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextAlignment" Value="Right"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <DataGridTextColumn Header="Demand Charge" 
                                        Binding="{Binding DemandCharge, StringFormat='à§³{0:N2}'}" 
                                        Width="115">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextAlignment" Value="Right"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <DataGridTextColumn Header="VAT" 
                                        Binding="{Binding VAT, StringFormat='à§³{0:N2}'}" 
                                        Width="80">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextAlignment" Value="Right"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <DataGridTextColumn Header="Rebate" 
                                        Binding="{Binding Rebate, StringFormat='à§³{0:N2}'}" 
                                        Width="80">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextAlignment" Value="Right"/>
                                <Setter Property="Foreground" Value="#e74c3c"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <DataGridTextColumn Header="Arrear" 
                                        Binding="{Binding ArrearAmount, StringFormat='à§³{0:N2}'}" 
                                        Width="90">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextAlignment" Value="Right"/>
                                <Setter Property="Foreground" Value="#e67e22"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <DataGridTextColumn Header="Vending Amount" 
                                        Binding="{Binding VendingAmount, StringFormat='à§³{0:N2}'}" 
                                        Width="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="#27ae60"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="TextAlignment" Value="Right"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <DataGridTextColumn Header="Amount" 
                                        Binding="{Binding Amount, StringFormat='à§³{0:N2}'}" 
                                        Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="TextAlignment" Value="Right"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <DataGridTextColumn Header="Customer" 
                                        Binding="{Binding CustomerName}" 
                                        Width="150"/>
                    
                    <DataGridTextColumn Header="Notes" 
                                        Binding="{Binding Notes}" 
                                        Width="*"
                                        MinWidth="150">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextWrapping" Value="NoWrap"/>
                                <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
        
        <!-- Compact Pagination + Actions Row -->
        <Border Grid.Row="3" Style="{StaticResource CardStyle}" Margin="0,0,0,10" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Left: Page Info -->
                <TextBlock Grid.Column="0" VerticalAlignment="Center" FontSize="13" Margin="0,0,15,0">
                    <Run Text="Page "/>
                    <Run Text="{Binding CurrentPage}" FontWeight="Bold"/>
                    <Run Text="/"/>
                    <Run Text="{Binding TotalPages}" FontWeight="Bold"/>
                    <Run Text=" â€¢ "/>
                    <Run Text="{Binding TotalRecords}"/>
                    <Run Text=" records"/>
                </TextBlock>
                
                <!-- Center: Pagination -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="â®ï¸ First" Command="{Binding FirstPageCommand}" Style="{StaticResource PrimaryButtonStyle}" Width="80" Height="38" Margin="3,0"/>
                    <Button Content="â—€ï¸ Prev" Command="{Binding PreviousPageCommand}" Style="{StaticResource PrimaryButtonStyle}" Width="75" Height="38" Margin="3,0"/>
                    <Button Content="Next â–¶ï¸" Command="{Binding NextPageCommand}" Style="{StaticResource PrimaryButtonStyle}" Width="75" Height="38" Margin="3,0"/>
                    <Button Content="Last â­ï¸" Command="{Binding LastPageCommand}" Style="{StaticResource PrimaryButtonStyle}" Width="80" Height="38" Margin="3,0"/>
                </StackPanel>
                
                <!-- Right: Actions -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="ðŸ–¨ï¸ Print" Command="{Binding PrintSelectedCommand}" Style="{StaticResource PrimaryButtonStyle}" Width="85" Height="38" Margin="3,0"/>
                    <Button Content="ðŸ—‘ï¸ Delete" Command="{Binding DeleteSelectedCommand}" Style="{StaticResource DangerButtonStyle}" Width="100" Height="38" Margin="3,0"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Selected Token Details Panel - Compact -->
        <Border Grid.Row="4" 
                Style="{StaticResource CardStyle}"
                Visibility="{Binding SelectedPayment, Converter={StaticResource StringToVisibilityConverter}}">
            <StackPanel>
                <TextBlock Text="Token Details" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,15"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Column 1 - Basic Info -->
                    <StackPanel Grid.Column="0" Margin="0,0,15,0">
                        <TextBlock Text="Basic Information" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Meter:" Margin="0,4" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedPayment.MeterNumber}" Margin="10,4"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Sequence:" Margin="0,4" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedPayment.SequenceNumber}" Margin="10,4"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Trx ID:" Margin="0,4" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedPayment.TransactionId}" Margin="10,4"/>
                            
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Date:" Margin="0,4" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedPayment.PaymentDate, StringFormat='dd/MM/yyyy HH:mm'}" Margin="10,4"/>
                        </Grid>
                    </StackPanel>
                    
                    <!-- Column 2 - Token -->
                    <StackPanel Grid.Column="1" Margin="0,0,15,0">
                        <TextBlock Text="Token Number" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <Border Background="#fff3cd" 
                                BorderBrush="#ffc107" 
                                BorderThickness="1" 
                                Padding="10"
                                CornerRadius="4">
                            <TextBlock Text="{Binding SelectedPayment.Token}" 
                                       FontFamily="Courier New"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#856404"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>
                    
                    <!-- Column 3 - Cost Breakdown -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Cost Breakdown" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Energy Cost:" Margin="0,2"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedPayment.EnergyCost, StringFormat='à§³{0:N2}'}" Margin="10,2" FontWeight="SemiBold"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Meter Rent:" Margin="0,2"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedPayment.MeterRent, StringFormat='à§³{0:N2}'}" Margin="10,2"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Demand Charge:" Margin="0,2"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedPayment.DemandCharge, StringFormat='à§³{0:N2}'}" Margin="10,2"/>
                            
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="VAT:" Margin="0,2"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedPayment.VAT, StringFormat='à§³{0:N2}'}" Margin="10,2"/>
                            
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Rebate:" Margin="0,2"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding SelectedPayment.Rebate, StringFormat='à§³{0:N2}'}" Margin="10,2" Foreground="#e74c3c"/>
                            
                            <Border Grid.Row="5" Grid.ColumnSpan="2" 
                                    Background="#d4edda" 
                                    BorderBrush="#28a745" 
                                    BorderThickness="0,2,0,0" 
                                    Margin="0,8,0,0"
                                    Padding="0,8,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Total:" FontWeight="Bold" FontSize="14"/>
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding SelectedPayment.VendingAmount, StringFormat='à§³{0:N2}'}" 
                                               FontWeight="Bold" 
                                               FontSize="16"
                                               Foreground="#155724"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
