<UserControl x:Class="BillPaymentManager.Views.HistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Token Purchase History" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   Foreground="#2C3E50"
                   Margin="0,0,0,20"/>
        
        <!-- Filter Section -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="Filters" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,10"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <Label Content="Start Date:"/>
                        <DatePicker SelectedDate="{Binding StartDate}"/>
                        
                        <Label Content="End Date:"/>
                        <DatePicker SelectedDate="{Binding EndDate}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Margin="10,0">
                        <Label Content="Search (Meter, Token, Transaction ID, Customer):"/>
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Height="32"
                                 VerticalContentAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2" Margin="10,0,0,0" VerticalAlignment="Bottom">
                        <Button Content="ðŸ” Apply Filter" 
                                Command="{Binding ApplyFilterCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"/>
                        <Button Content="ðŸ”„ Clear Filter" 
                                Command="{Binding ClearFilterCommand}"
                                Style="{StaticResource DangerButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
        
        <!-- Data Grid -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <DataGrid ItemsSource="{Binding Payments}"
                          SelectedItem="{Binding SelectedPayment}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          AlternatingRowBackground="#f8f9fa"
                          MinWidth="1100">
                    
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Date" 
                                            Binding="{Binding PaymentDate, StringFormat=dd/MM/yyyy}" 
                                            Width="90"/>
                        
                        <DataGridTextColumn Header="Meter No" 
                                            Binding="{Binding MeterNumber}" 
                                            Width="110"/>
                        
                        <DataGridTextColumn Header="Token Number" 
                                            Binding="{Binding Token}" 
                                            Width="170">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontFamily" Value="Courier New"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Header="Seq" 
                                            Binding="{Binding SequenceNumber}" 
                                            Width="45"/>
                        
                        <DataGridTextColumn Header="Energy" 
                                            Binding="{Binding EnergyCost, StringFormat='à§³{0:N2}'}" 
                                            Width="80"/>
                        
                        <DataGridTextColumn Header="Rent" 
                                            Binding="{Binding MeterRent, StringFormat='à§³{0:N2}'}" 
                                            Width="70"/>
                        
                        <DataGridTextColumn Header="Demand" 
                                            Binding="{Binding DemandCharge, StringFormat='à§³{0:N2}'}" 
                                            Width="75"/>
                        
                        <DataGridTextColumn Header="VAT" 
                                            Binding="{Binding VAT, StringFormat='à§³{0:N2}'}" 
                                            Width="65"/>
                        
                        <DataGridTextColumn Header="Rebate" 
                                            Binding="{Binding Rebate, StringFormat='à§³{0:N2}'}" 
                                            Width="70">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#e74c3c"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Header="Total" 
                                            Binding="{Binding VendingAmount, StringFormat='à§³{0:N2}'}" 
                                            Width="90">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Foreground" Value="#27ae60"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Header="Trx ID" 
                                            Binding="{Binding TransactionId}" 
                                            Width="85"/>
                        
                        <DataGridTextColumn Header="Customer" 
                                            Binding="{Binding CustomerName}" 
                                            Width="*"
                                            MinWidth="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>
        </Border>
        
        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="ðŸ–¨ï¸ Print Selected" 
                    Command="{Binding PrintSelectedCommand}"
                    Style="{StaticResource PrimaryButtonStyle}"/>
            <Button Content="ðŸ—‘ï¸ Delete Selected" 
                    Command="{Binding DeleteSelectedCommand}"
                    Style="{StaticResource DangerButtonStyle}"/>
        </StackPanel>
    </Grid>
</UserControl>
