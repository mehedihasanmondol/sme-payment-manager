<Window x:Class="BillPaymentManager.Views.PrintPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Print Preview - à¦ªà¦²à§à¦²à§€ à¦¬à¦¿à¦¦à§à¦¯à§à§Ž à¦ªà§à¦°à¦¿à¦ªà§‡à¦‡à¦¡ à¦°à¦¶à¦¿à¦¦" 
        Height="600" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#f5f5f5"
        Icon="pack://application:,,,/BillPaymentManager;component/icon.ico">
    
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Print Preview Area -->
        <Border Grid.Row="0" 
                Background="White" 
                Margin="20"
                BorderBrush="#ddd"
                BorderThickness="1"
                CornerRadius="5"
                Padding="0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Border x:Name="PrintableArea" 
                        Background="White" 
                        Padding="30,20"
                        Width="400">
                    <StackPanel>
                        <!-- Header -->
                        <TextBlock Text="{Binding ReceiptSettings.BusinessName}" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   TextAlignment="Center"
                                   Margin="0,0,0,5"/>
                        
                        <TextBlock Text="{Binding ReceiptSettings.Address}" 
                                   FontSize="12" 
                                   TextAlignment="Center"
                                   Margin="0,0,0,2"/>
                        
                        <TextBlock FontSize="14" 
                                   FontWeight="SemiBold"
                                   TextAlignment="Center"
                                   Margin="0,0,0,2">
                            <Run Text="à¦®à§‹à¦¬à¦¾à¦‡à¦²: "/>
                            <Run Text="{Binding ReceiptSettings.PhoneNumber}"/>
                        </TextBlock>
                        
                        <TextBlock Text="{Binding ReceiptSettings.OwnerName}" 
                                   FontSize="12" 
                                   FontWeight="SemiBold"
                                   TextAlignment="Center"
                                   Margin="0,0,0,2"/>
                        
                        <TextBlock Text="{Binding ReceiptSettings.Location}" 
                                   FontSize="11" 
                                   TextAlignment="Center"
                                   Margin="0,0,0,2"/>
                        
                        <TextBlock FontSize="11" 
                                   TextAlignment="Center"
                                   Margin="0,0,0,10">
                            <Run Text="à¦¤à¦¾à¦°à¦¿à¦–: "/>
                            <Run Text="{Binding Payment.PaymentDate, StringFormat='dd-MM-yyyy hh:mm:ss tt'}"/>
                        </TextBlock>
                        
                        <!-- Separator Line -->
                        <Border BorderBrush="Black" 
                                BorderThickness="0,1,0,1" 
                                Margin="0,5">
                            <TextBlock Text="" Height="1"/>
                        </Border>
                        
                        <!-- Main Title -->
                        <TextBlock Text="{Binding ReceiptSettings.ReceiptTitle}" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   TextAlignment="Center"
                                   Margin="0,10"/>
                        
                        <!-- Separator Line -->
                        <Border BorderBrush="Black" 
                                BorderThickness="0,1,0,1" 
                                Margin="0,10,0,5">
                            <TextBlock Text="" Height="1"/>
                        </Border>
                        
                        <!-- Details Grid -->
                        <Grid Margin="0,10,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="à¦®à¦¿à¦Ÿà¦¾à¦° à¦¨à¦®à§à¦¬à¦°" FontSize="12" Margin="0,3"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" FontSize="12" Margin="0,3" TextAlignment="Right">
                                <Run Text=": "/>
                                <Run Text="{Binding Payment.MeterNumber, FallbackValue='N/A'}"/>
                            </TextBlock>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="à¦—à§à¦°à¦¾à¦¹à¦• à¦¨à¦¾à¦®" FontSize="12" Margin="0,3"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" FontSize="12" Margin="0,3" TextAlignment="Right">
                                <Run Text=": "/>
                                <Run Text="{Binding Payment.CustomerName, FallbackValue='N/A'}"/>
                            </TextBlock>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="à¦¸à¦¿à¦•à§à¦¯à¦¼à§‡à¦¨à§à¦¸ à¦¨à¦®à§à¦¬à¦°" FontSize="12" Margin="0,3"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" FontSize="12" Margin="0,3" TextAlignment="Right">
                                <Run Text=": "/>
                                <Run Text="{Binding Payment.SequenceNumber, FallbackValue='N/A'}"/>
                            </TextBlock>
                        </Grid>
                        
                        <!-- Separator Line -->
                        <Border BorderBrush="Black" 
                                BorderThickness="0,1,0,0" 
                                Margin="0,5,0,10">
                            <TextBlock Text="" Height="1"/>
                        </Border>
                        
                        <!-- Cost Breakdown -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Energy Cost" FontSize="12" Margin="0,2"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" FontSize="12" Margin="0,2" TextAlignment="Right">
                                <Run Text=": "/>
                                <Run Text="{Binding EnergyCost, StringFormat='{}{0:N2}', FallbackValue='0.00'}"/>
                            </TextBlock>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Demand Charge" FontSize="12" Margin="0,2"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" FontSize="12" Margin="0,2" TextAlignment="Right">
                                <Run Text=": "/>
                                <Run Text="{Binding DemandCharge, StringFormat='{}{0:N2}', FallbackValue='0.00'}"/>
                            </TextBlock>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Meter Rent" FontSize="12" Margin="0,2"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" FontSize="12" Margin="0,2" TextAlignment="Right">
                                <Run Text=": "/>
                                <Run Text="{Binding MeterRent, StringFormat='{}{0:N2}', FallbackValue='0.00'}"/>
                            </TextBlock>
                            
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="VAT" FontSize="12" Margin="0,2"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" FontSize="12" Margin="0,2" TextAlignment="Right">
                                <Run Text=": "/>
                                <Run Text="{Binding VAT, StringFormat='{}{0:N2}', FallbackValue='0.00'}"/>
                            </TextBlock>
                            
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Rebate" FontSize="12" Margin="0,2"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" FontSize="12" Margin="0,2" TextAlignment="Right">
                                <Run Text=": "/>
                                <Run Text="{Binding Rebate, StringFormat='{}{0:N2}', FallbackValue='0.00'}"/>
                            </TextBlock>
                            
                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Transaction ID" FontSize="12" Margin="0,2"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" FontSize="12" Margin="0,2" TextAlignment="Right">
                                <Run Text=": "/>
                                <Run Text="{Binding TransactionId, FallbackValue='(Not Provided)'}"/>
                            </TextBlock>
                        </Grid>
                        
                        <!-- Total Amount -->
                        <Grid Margin="0,5,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="à¦®à§‹à¦Ÿ à¦ªà¦°à¦¿à¦®à¦¾à¦£" FontSize="14" FontWeight="Bold" Margin="0,2"/>
                            <TextBlock Grid.Column="1" FontSize="14" FontWeight="Bold" Margin="0,2" TextAlignment="Right">
                                <Run Text=": "/>
                                <Run Text="{Binding VendingAmount, StringFormat='{}{0:N2}', FallbackValue='0.00'}"/>
                            </TextBlock>
                        </Grid>
                        
                        <!-- Separator Line -->
                        <Border BorderBrush="Black" 
                                BorderThickness="0,1,0,1" 
                                Margin="0,5,0,10">
                            <TextBlock Text="" Height="1"/>
                        </Border>
                        
                        <!-- Token Section -->
                        <TextBlock Text="Token" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   TextAlignment="Center"
                                   Margin="0,10,0,5"/>
                        
                        <TextBlock Text="{Binding Token, FallbackValue='N/A'}" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   FontFamily="Courier New"
                                   TextAlignment="Center"
                                   Margin="0,0,0,10"/>
                        
                        <!-- Separator Line -->
                        <Border BorderBrush="Black" 
                                BorderThickness="0,1,0,1" 
                                Margin="0,10,0,10">
                            <TextBlock Text="" Height="1"/>
                        </Border>
                        
                        <!-- Footer -->
                        <TextBlock Text="{Binding ReceiptSettings.FooterText}" 
                                   FontSize="12" 
                                   FontWeight="SemiBold"
                                   TextAlignment="Center"
                                   Margin="0,5,0,2"/>
                        
                        <TextBlock Text="{Binding ReceiptSettings.DeveloperCredit}" 
                                   FontSize="10" 
                                   TextAlignment="Center"
                                   Foreground="#666"
                                   Margin="0,2,0,10"/>
                    </StackPanel>
                </Border>
            </ScrollViewer>
        </Border>
        
        <!-- Action Buttons -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,0,0,20">
            <Button Content="âš™ï¸ Settings" 
                    Click="PrinterSettingsButton_Click"
                    Style="{StaticResource PrintButtonStyle}"
                    Background="#3498db"
                    Margin="5,5,20,5"/>
            
            <Button Content="ðŸ–¨ï¸ Print" 
                    Click="PrintButton_Click"
                    Style="{StaticResource PrintButtonStyle}"/>
            <Button Content="ðŸ“„ PDF" 
                    Click="DownloadPdfButton_Click"
                    Style="{StaticResource PrintButtonStyle}"
                    Background="#27ae60"
                    Margin="5,5,5,5"/>
            <Button Content="âŒ Close" 
                    Click="CancelButton_Click"
                    Style="{StaticResource CancelButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
