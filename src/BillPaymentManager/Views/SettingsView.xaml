<UserControl x:Class="BillPaymentManager.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    
    <StackPanel Margin="20">
        <!-- Header -->
        <TextBlock Text="Settings" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   Foreground="#2C3E50"
                   Margin="0,0,0,20"/>
        
        <!-- Application Info -->
        <Border Style="{StaticResource CardStyle}">
            <StackPanel>
                <TextBlock Text="Application Information" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,15"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <Label Grid.Row="0" Grid.Column="0" Content="Application Name:"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" 
                               Text="Bill Payment Manager"
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"/>
                    
                    <Label Grid.Row="1" Grid.Column="0" Content="Version:"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" 
                               Text="{Binding ApplicationVersion}"
                               VerticalAlignment="Center"/>
                    
                    <Label Grid.Row="2" Grid.Column="0" Content="Database Path:"/>
                    <TextBox Grid.Row="2" Grid.Column="1" 
                             Text="{Binding DatabasePath}"
                             IsReadOnly="True"
                             Background="#ecf0f1"
                             VerticalContentAlignment="Center"/>
                </Grid>
            </StackPanel>
        </Border>
        
        <!-- About -->
        <Border Style="{StaticResource CardStyle}">
            <StackPanel>
                <TextBlock Text="About" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,10"/>
                
                <TextBlock TextWrapping="Wrap" 
                           FontSize="13"
                           Foreground="#7f8c8d">
                    <Run Text="Bill Payment Manager is a desktop application designed for small shops in Bangladesh to manage mobile payment receipts from bKash, Nagad, and Rocket."/>
                    <LineBreak/><LineBreak/>
                    <Run Text="Features:"/>
                    <LineBreak/>
                    <Run Text="• Automatic SMS parsing for payment extraction"/>
                    <LineBreak/>
                    <Run Text="• Payment history with advanced filtering"/>
                    <LineBreak/>
                    <Run Text="• Dashboard with real-time statistics"/>
                    <LineBreak/>
                    <Run Text="• Receipt printing support"/>
                    <LineBreak/>
                    <Run Text="• SQLite database for local storage"/>
                    <LineBreak/><LineBreak/>
                    <Run Text="Built with .NET 8, WPF, and MVVM architecture"/>
                </TextBlock>
            </StackPanel>
        </Border>
        
        <!-- Support -->
        <Border Style="{StaticResource CardStyle}">
            <StackPanel>
                <TextBlock Text="Support" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,10"/>
                
                <TextBlock TextWrapping="Wrap" 
                           FontSize="13"
                           Foreground="#7f8c8d">
                    <Run Text="For technical support or inquiries, please refer to the Developer Info page."/>
                </TextBlock>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
